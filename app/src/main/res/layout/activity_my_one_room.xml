<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyOneRoom">
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/one" />


    <TextView
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/juja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JUJA , GATUNDU ROAD" />



    <TextView
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/kk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apartments Next To KK Towers" />



    <TextView
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/moneys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Only 15,000 Shillings Per Month" />
    <TextView
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="40dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Method Of Payment Send Money!!!" />



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/bg"
            android:id="@+id/mBtnPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/stat_sys_phone_call" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:id="@+id/calls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0757792010" />
    </LinearLayout>


    <Button
        android:id="@+id/mBtnHousing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/borders"
        android:text="ACQUIRE HOUSE"
        android:textColor="@color/black" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mBtnrateAPP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:text="Rate this app"
            android:textColor="#039BE5"
            android:textSize="17dp"
            android:textStyle="italic|bold" />

        <RatingBar

            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:contextClickable="true"
            android:longClickable="true"
            android:numStars="5"
            android:pointerIcon="hand" />
    </LinearLayout>

</LinearLayout>
